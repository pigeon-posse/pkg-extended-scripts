	},
	"funding": {
		"type": "individual",
		"url": "https://pigeonposse.com/?popup=donate"
	},
	"homepage": "https://pigeonposse.com/",
	"repository": {
		"type": "git",
		"url": "https://github.com/pigeon-posse/pkg-extended-scripts"
	}
}
