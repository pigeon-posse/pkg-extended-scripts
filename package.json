{
	"name": "@pigeon-posse/pkg-extended-scripts",
	"version": "0.1.0",
	"description": "Separate scripts from pacakage.json",
	"main": "index.js",
	"type": "module",
	"bin": {
		"pkg-extended-scripts": "./index.js",
		"pes": "./index.js"
	},
	"scripts": {
		"start": "npx pes",
		"updates": "sudo npm i -g npm-check-updates && ncu -u && npm install",
		"deploy": "npm run lint:fix && npm login && npm publish --access public",
		"lint": "concurrently \"npm:lint:*(!fix)\"",
		"lint:js": "eslint . --ext .js",
		"lint:fix": "concurrently \"npm:lint:fix:*\"",
		"lint:fix:js": "eslint . --ext .js"
	},
	"devDependencies": {
		"@babel/core": "^7.20.5",
		"@babel/eslint-parser": "^7.19.1",
		"@babel/preset-env": "^7.20.2",
		"@pigeon-posse/eslint-config": "^1.0.1",
		"babel-jest": "^29.3.1",
		"babel-loader": "^9.1.0",
		"eslint": ">= 8",
		"eslint-plugin-align-assignments": ">= 1",
		"eslint-plugin-align-import": "^1.0.0",
		"eslint-plugin-html": "^7.1.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jsdoc": "^39.3.6",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-promise": ">= 6",
		"jest": "^29.3.1"
	},
	"dependencies": {
		"chalk": "^5.0.1",
		"js-yaml": "^4.1.0"
	},
	"keywords": [
		"package.json",
		"package-scripts",
		"extended-scripts",
		"scripts",
		"npm",
		"cli",
		"pkg",
		"pigeonposse"
	],
	"author": {
		"name": "Angelo",
		"email": "angelo@pigeonposse.com",
		"url": "https://pigeonposse.com"
	},
	"license": {
